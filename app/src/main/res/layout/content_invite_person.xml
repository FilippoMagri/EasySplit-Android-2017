<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.polito.mad.easysplit.InvitePerson"
    tools:showIn="@layout/activity_invite_person">
    <EditText
        android:id="@+id/email_invite_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insert Email"/>
    <Button
        style="@android:style/Widget.Material.Button.Colored"
        android:id="@+id/invite_person_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite Person By Mail"
        android:onClick="onClick"/>

</LinearLayout>
