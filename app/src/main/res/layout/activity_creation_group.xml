<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="it.polito.mad.easysplit.CreationGroup">



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="58dp"
        android:layout_marginLeft="20px">

        <ImageButton

            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"


            android:src="@drawable/ic_back"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="-116dp" />
        <ImageButton

            android:id="@+id/valid"
            android:layout_width="54dp"
            android:layout_height="67dp"
            android:layout_alignRight="@id/back"
            android:src="@drawable/ic_valid"
            tools:layout_editor_absoluteX="330dp"
            tools:layout_editor_absoluteY="0dp"

        />


        <TextView

            android:id="@+id/choosename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/back"
            android:text="Choose a Group Name"
            android:textSize="40px"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="61dp"
            android:layout_marginLeft="20px"/>


        <EditText
            android:id="@+id/nameGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/choosename"
            android:hint="Trip, Flat"
            android:drawableRight="@drawable/ic_write"
            android:textSize="35px"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="78dp"
            android:layout_marginLeft="20px"/>


        <TextView
            android:id="@+id/ListParticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameGroup"
            android:hint="Add Participant"
            android:textSize="40px"
            android:layout_marginTop="40px"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="167dp"
            android:layout_marginLeft="20px"/>

        <EditText
            android:id="@+id/Participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ListParticipant"
            android:hint="Maria        "
            android:drawableRight="@drawable/ic_write"
            android:textSize="35px"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="201dp"
            android:layout_marginLeft="30px"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            app:layout_anchor="@+id/include"
            app:layout_anchorGravity="center_vertical|right"
            app:srcCompat="@android:drawable/ic_input_add"
            android:layout_alignRight="@id/ListParticipant"
            android:layout_marginLeft="50px"
            android:layout_below="@id/ListParticipant"/>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
