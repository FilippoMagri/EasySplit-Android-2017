<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.mad.easysplit.AddExpenses"
    tools:showIn="@layout/activity_add_expenses"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:text="Date "
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <EditText
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:id="@+id/dateEditText"
                    android:layout_margin="10dp"
                    android:layout_width="@dimen/fab_margin"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"/>

                <ImageView
                    android:src="@drawable/ic_date_range_black_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_weight="0.1"
                    android:text="Title  "
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <EditText
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:id="@+id/dateEditText3"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"/>

                <ImageView
                    android:src="@drawable/ic_date_range_material_light_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.0"
                    android:text="Amount "
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <EditText
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:id="@+id/dateEditText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.8" />

                <ImageView
                    android:src="@drawable/ic_date_range_material_light_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:text="PaidBy"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:gravity="center"/>
                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.8"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:entries="@array/countries_dummy_example"/>
                <ImageView
                    android:src="@drawable/ic_date_range_material_light_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:text="For    "
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:gravity="center"/>
                <EditText
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:id="@+id/dateEditText5"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"/>
                <ImageView
                    android:src="@drawable/ic_date_range_material_light_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0.1"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textSize="18dp" />
        </LinearLayout>
</LinearLayout>